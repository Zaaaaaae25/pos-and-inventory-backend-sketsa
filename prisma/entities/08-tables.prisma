/// ========== TABLES (DINE-IN) ==========
model Table {
  id      Int    @id @default(autoincrement())
  placeId Int    @map("place_id")
  name    String
  status  String?

  place        Place        @relation(fields: [placeId], references: [id], onDelete: Restrict)
  transactions Transaction[]

  @@map("tables")
}
